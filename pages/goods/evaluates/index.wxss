page{
    background: #f7f7f7;
}
.container{
    padding: 20rpx 0;
}

.evaluates{
    border-radius: 20rpx;
    background: #fff;
    margin-bottom: 60rpx;
    padding: 48rpx 24rpx;
}

.tabs{
    display: flex;
    gap: 16rpx 16rpx;
}
.tabs .tab{
    width: 88rpx;
    height: 48rpx;
    line-height: 48rpx;
    font-size: 28rpx;
    text-align: center;
    color: #666666;
    border-radius: 8rpx;
    background: rgba(238, 238, 238, 0.5);
}
.tabs .tab.active{
    color: #05C160;
    background: rgba(5, 193, 96, 0.1);
}
.evaluate{
    padding: 32rpx 24rpx;
    border-bottom: 2rpx solid #EEEEEE;
}

.evaluate .userInfo{
    height: 66rpx;
    display: flex;
    align-items: center;
}
.evaluate .userInfo .avatar{
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    margin-right: 14rpx;
}
.evaluate .userInfo .user{
    font-size: 24rpx;
    color: #222222;
    font-weight: bold;
}
.evaluate .other{
    display: flex;
    gap: 0 60rpx;
    font-size: 24rpx;
    color: #999999;
    margin: 20rpx 0;
}
.evaluate .other text{
    color: #222;
}
.evaluate .content{
    font-size: 24rpx;
    color: #222222;
    margin-top: 10rpx;
    margin-bottom: 36rpx;
}
.evaluate .imgs{
    display: flex;
    gap: 0 24rpx
}
.evaluate .imgs .img{
    width: 144rpx;
    height: 144rpx;
    border-radius: 12rpx;
    opacity: 1;
}
