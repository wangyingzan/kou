
.container{
    padding: 34rpx 24rpx
}



.box{
    padding: 24rpx;
    border-radius: 24rpx;
    background: #FFFFFF;
    margin-bottom: 24rpx;
}
.boxTitle{
    font-size: 32rpx;
    color: #222222;
    font-weight: bold;
    margin-bottom: 26rpx;
}
.addressInfo .address{
    position: relative;
    display: flex;
    line-height: 40rpx;
    font-size: 28rpx;
    margin-bottom: 60rpx;
}
.addressInfo .address .map{
    position: absolute;
    top: 50%;
    right: 0;
    width: 32rpx;
    height: 32rpx;
    transform: translate(0,-50%);
    box-sizing: border-box;
}
.addressInfo .item{
    display: flex;
    line-height: 40rpx;
    font-size: 28rpx;
    margin-bottom: 60rpx;
}
.addressInfo .left{
    font-weight: bold;
    color: #222222;
    margin-right: 24rpx;
}
.addressInfo input{
    flex: 1;
    font-size: 28rpx;
    height: 40rpx;
}
.addressInfo .item:last-child{
    margin-bottom: 18rpx;
}
.placeholder{
    color: #ccc;
}

.timeBox{
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
}
.timeBox .name{
    font-size: 28rpx;
    color: #222222;
    margin-right: 24rpx;
}
.timeBox .time{
    width: 152rpx;
    line-height: 52rpx;
    text-align: center;
    font-size: 28rpx;
    color: #666666;
    border: 2rpx solid #DDDDDD;
    border-radius: 168rpx;
}
.box .timeBox:last-child{
    margin-bottom: 8rpx;
}
.division{
    padding: 0 12rpx;
    color: #ddd;
}

.hint{
    font-size: 24rpx;
    color: #999999;
    margin-bottom: 32rpx;
}


.primaryBtn {
    line-height: 80rpx;
    font-size: 28rpx;
    color: #FFFFFF;
    text-align: center;
    border-radius: 8rpx;
    background: #05C160;
}
