
.container {
    padding: 34rpx 26rpx
}

.rateInput {
    position: absolute;
    right: 100vw;
    /*display: none;*/
}

.box {
    padding: 24rpx;
    border-radius: 24rpx;
    background: #FFFFFF;
    margin-bottom: 24rpx;
}

.boxTitle {
    font-size: 32rpx;
    color: #222222;
    font-weight: bold;
    margin-bottom: 40rpx;
}

.subtitle {
    font-size: 28rpx;
    color: #222222;
    margin-bottom: 16rpx;
}

.primaryBtn {
    line-height: 84rpx;
    font-size: 32rpx;
    color: #FFFFFF;
    text-align: center;
    border-radius: 12rpx;
    background: #05C160;
    margin-top: 80rpx;
}

.hint {
    line-height: 48rpx;
    color: #FF7900;
    padding: 0 16rpx;
    font-size: 24rpx;
    border-radius: 8rpx;
    background: rgba(255, 121, 0, 0.05);
    margin-bottom: 40rpx;
    margin-top: 24rpx;
}

.summary {
    width: 100%;
    height: 216rpx;
    font-size: 24rpx;
    color: #666666;
    padding: 16rpx 20rpx;
    border-radius: 12rpx;
    background: #FAFAFA;
    margin-bottom: 16rpx;
}

.rateBox {
    display: flex;
    align-items: flex-end;
}

.rateBox .text {
    font-size: 24rpx;
    color: #666666;
    margin-right: 18rpx;
}

.rateBox .dot {
    width: 12rpx;
    height: 12rpx;
    background: rgba(77, 193, 133, 0.2);
}

.rateBox .rate {
    width: 88rpx;
    font-weight: bold;
    line-height: 108rpx;
    text-align: center;
    font-size: 52rpx;
    color: #222222;
    border-radius: 12rpx;
    background: rgba(5, 193, 96, 0.05);
    margin: 0 24rpx;
}
