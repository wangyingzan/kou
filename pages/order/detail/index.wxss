page{
    background: #f5f5f5;
}
.timeBox{
    /*height: 60rpx;*/
    display: flex;
    justify-content: center;
    font-weight: bold;
    font-size: 24rpx;
    align-items: center;
    /*padding-left: 80rpx;*/
    background: #fff;
    padding-bottom: 20rpx;
}
.timeBox .icon{
    width: 25rpx;
    height: 25rpx;
    display: block;
    margin-right: 10rpx;
}
.timeBox .time .van-count-down {
    font-weight: bold;
    font-size: 24rpx;

    color: #F23D3D;
}

.container{
    padding: 20rpx 24rpx;
    padding-bottom: 200rpx;
}
.box{
    border-radius: 12rpx;
    background: #FFFFFF;
    margin-bottom: 20rpx;
}

.addressBox{
    position: relative;
    padding: 30rpx 24rpx;
}
.addressBox .address{
    display: flex;
    gap: 0 12rpx;
    font-size: 28rpx;
    color: #666666;
    margin-bottom: 16rpx;
}
.addressBox .addressName{
    max-width: 520rpx;
    font-size: 32rpx;
    color: #222222;
    font-weight: bold;
    margin-bottom: 16rpx;
}
.addressBox .userInfo{
    font-size: 28rpx;
    color: #222222;
}

.addressBox .userInfo .username{
    margin-right: 16rpx;
}
.addressBox .btn{
    position: absolute;
    top: 50%;
    right: 24rpx;
    width: 104rpx;
    height: 48rpx;
    line-height: 48rpx;
    color: #222222;
    font-size: 28rpx;
    text-align: center;
    border-radius: 8rpx;
    border: 2rpx solid #CCCCCC;
    transform: translate(0,-50%);
}
.emptyAddress{
    padding: 6rpx;
    text-align: center;
    border-radius: 8rpx;
}
.emptyAddress .item{
    width: 290rpx;
    line-height: 74rpx;
    text-align: center;
    font-size: 28rpx;
    color: #666666;
    border: 2rpx solid #CCCCCC;
    margin: 20rpx auto;
}
.logisticsBox{
    padding: 22rpx 32rpx ;
}
.logisticsTitle{
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 32rpx;
    font-weight: bold;
    /* 文字/主题文字 */
    color: #012110;
}
.logisticsTitle .del{
    font-size: 22rpx;
    color: #023B1D;
    font-weight: normal;
}
.goodsInfo{
    padding: 0 24rpx;
}
.goodsInfo .title{
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 2rpx solid #EEEEEE;
    margin-bottom: 27rpx;

}
.goodsInfo .left{
    height: 98rpx;
    display: flex;
    align-items: center;
    font-weight: bold;

}
.goodsInfo .left .icon{
    width: 31rpx;
    height: 30rpx;
    margin-right: 12rpx;
}
.goods{
    display: flex;
    padding-bottom: 28rpx;
}
.goodsInfo{
    flex: 1;
}
.goodsInfo .img{
    width: 180rpx;
    height: 190rpx;
    flex: none;
    margin-right: 24rpx;
}
.goodsInfo .name{
    font-size: 28rpx;
    color: #333333;
    margin-bottom: 12rpx;
}
.goodsInfo .info{
    font-size: 24rpx;
    color: #666666;
    margin-bottom: 12rpx;
}
.goodsInfo .spec{
    font-size: 24rpx;
    color: #333333;
    margin-bottom: 12rpx;
}
.goodsInfo .spec .num{
    font-size: 28rpx;
}
.goodsInfo .tips{
    display: flex;
    gap: 0 24rpx;
}
.goodsInfo .tips .tip{
    padding: 0 5rpx;
    line-height: 28rpx;
    font-size: 20rpx;
    border-radius: 5rpx;
    color: #E6A23C;
    border: 2rpx solid #E6A23C;

}
.goodsInfo .tips .tip:nth-child(2){
    color: #05C160;
    border: 2rpx solid #05C160;
}

.goodsMoney{
    flex: none;
    font-size: 36rpx;
    color: #012110;
    text-align: right;
}

.orderInfo{
    font-size: 28rpx;
    color: #222222;
    padding: 28rpx 24rpx;
}
.orderInfo .item{
    display: flex;
    justify-content: space-between;
    margin-bottom: 28rpx;
}
.orderInfo .item:last-child{
    margin-bottom: 0;
}
.orderInfo .item .right{
    color: #999999;
}
.orderInfo .item .money{
    font-weight: bold;
    color: #F23D3D;
}

.payBox{
    display: flex;
    justify-content: space-between;
    align-content: center;
    padding: 24rpx;
}
.payBox .wechat{
    display: flex;
    align-content: center;
    font-size: 28rpx;
    font-weight: bold;
    line-height: 48rpx;
    color: #222222;
}
.payBox .wechat .icon{
    width: 48rpx;
    height: 48rpx;
    margin-right: 15rpx;
}
.footerBox{
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
    padding-bottom: constant(safe-area-inset-bottom); /*兼容 IOS<11.2*/
    padding-bottom: env(safe-area-inset-bottom); /*兼容 IOS>11.2*/
}
.footer{

    width: 100vw;
    display: flex;
    height: 136rpx;
    align-items: center;
    justify-content: flex-end;
    gap: 16rpx;
    padding: 0 12rpx;
    background: #fff;

}

.primaryBtn{
    width: 300rpx;
    line-height: 72rpx;
    color: #fff;
    text-align: center;
    padding: 0 25rpx;
    font-size: 28rpx;
    border-radius: 12rpx;
    background: #05C160;
}
.defaultBtn{
    height: 72rpx;
    line-height: 72rpx;
    color: #222;
    text-align: center;
    padding: 0 25rpx;
    font-size: 28rpx;
    border-radius: 12rpx;
    border: 2rpx solid #DDDDDD;

}

