page{
    background: #f5f5f5;
}
.container{
    padding: 20rpx 24rpx;
    padding-bottom: 200rpx;
}
.box{
    border-radius: 12rpx;
    background: #FFFFFF;
    margin-bottom: 20rpx;
}

.goodsInfo{
    padding:  24rpx;
}
.goodsInfo .title{
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 2rpx solid #EEEEEE;
    margin-bottom: 27rpx;

}
.goodsInfo .left{
    height: 98rpx;
    display: flex;
    align-items: center;
    font-weight: bold;

}
.goodsInfo .left .icon{
    width: 31rpx;
    height: 30rpx;
    margin-right: 12rpx;
}
.goods{
    display: flex;

}
.goodsInfo{
    flex: 1;
}
.goodsInfo .img{
    width: 180rpx;
    height: 190rpx;
    flex: none;
    margin-right: 24rpx;
}
.goodsInfo .name{
    font-size: 28rpx;
    color: #333333;
    margin-bottom: 12rpx;
}
.goodsInfo .info{
    font-size: 24rpx;
    color: #666666;
    margin-bottom: 12rpx;
}
.goodsInfo .spec{
    font-size: 24rpx;
    color: #333333;
    margin-bottom: 12rpx;
}
.goodsInfo .spec .num{
    font-size: 28rpx;
}
.goodsInfo .tips{
    display: flex;
    gap: 0 24rpx;
}
.goodsInfo .tips .tip{
    padding: 0 5rpx;
    line-height: 28rpx;
    font-size: 20rpx;
    border-radius: 5rpx;
    color: #E6A23C;
    border: 2rpx solid #E6A23C;

}
.goodsInfo .tips .tip:nth-child(2){
    color: #05C160;
    border: 2rpx solid #05C160;
}

.goodsMoney{
    flex: none;
    font-size: 36rpx;
    color: #012110;
    text-align: right;
}
