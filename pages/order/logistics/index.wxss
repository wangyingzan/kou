page{
    background: #f5f5f5;
}
.container{
    padding: 20rpx 24rpx;
    padding-bottom: 200rpx;
}
.goodsBox{
    padding: 20rpx 24rpx;
}
.swiperBox{
    width: 702rpx;
    border-radius: 12rpx;
    background: #FFFFFF;
}

.swiperBox{
    height: 254rpx;
}

.goods{
    position: relative;
    display: flex;
    margin-bottom: 20rpx;
}
.goods .tip{
    position: absolute;
    right: 0;
    top: 0;
    width: 156rpx;
    height: 36rpx;
    font-size: 22rpx;
    color: #FFFFFF;
    text-align: center;
    border-radius: 0 12rpx 0 14rpx;
    /* 辅助色/橙 */
    background: #FF7900;
}
.goods{
    padding:  22rpx 24rpx;
}
.goods .title{
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 2rpx solid #EEEEEE;
    margin-bottom: 27rpx;

}
.goods .left{
    height: 98rpx;
    display: flex;
    align-items: center;
    font-weight: bold;

}
.goods .left .icon{
    width: 31rpx;
    height: 30rpx;
    margin-right: 12rpx;
}
.goods .img{
    width: 180rpx;
    height: 180rpx;
    flex: none;
    margin-right: 24rpx;
}
.goods .status{
    font-size: 32rpx;
    font-weight: bold;
    /* 文字/主题文字 */
    color: #012110;
    margin-bottom: 12rpx;
}
.goods .name{
    font-size: 28rpx;
    color: #333333;
    margin-bottom: 12rpx;
}
.goods .info{
    font-size: 24rpx;
    color: #666666;
    margin-bottom: 12rpx;
}


.goodsMoney{
    flex: none;
    font-size: 36rpx;
    color: #012110;
    text-align: right;
}
