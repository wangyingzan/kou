

.tabs{
    display: flex;
    align-items: center;
    padding: 0 12rpx;
    background: #fff;
}
.tabs .tab{
    position: relative;
    width: 156rpx;
    text-align: center;
    line-height: 86rpx;
    font-size: 28rpx;
    color: #333333;
}
.tabs .tab.active{
    font-size: 32rpx;
    font-weight: bold;
    color: #222222;
}
.tabs .tab.active:before{
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 44rpx;
    height: 8rpx;
    border-radius: 40rpx;
    background: #54B061;
    transform: translate(-50%,0);

}
.tabs .tab .num{
    position: absolute;
    top: 5rpx;
    right: -10rpx;
    width: 32rpx;
    height: 28rpx;
    font-weight: bold;
    line-height: 28rpx;
    text-align: center;
    color: #fff;
    font-size: 20rpx;
    border-radius: 64rpx;
    background: #F73A3A;
}

.list{
    padding: 20rpx 24rpx;
}


.goodsItem{
    border-radius: 24rpx;
    background: #fff;
    padding: 0 24rpx 24rpx 24rpx;
    margin-bottom: 24rpx;
}
.goodsItem .title{
    height: 98rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    font-weight: bold;
    border-bottom: 2rpx solid #EEEEEE;
    margin-bottom: 27rpx;
}
.goodsItem .title .icon{
    width: 31rpx;
    height: 30rpx;
    margin-right: 12rpx;
}
.goodsItem .title .left{
    display: flex;
    align-items: center;
}
.goodsItem .title .status{
    font-weight: normal;
    font-size: 28rpx;
    color: #999;
}
.goods{
    display: flex;
    margin-bottom: 12rpx;
}
.list .goods:last-child{
    margin-bottom: 0;
}
.goods{
    flex: 1;
    margin-bottom: 28rpx;
}
.goods .img{
    width: 180rpx;
    height: 190rpx;
    flex: none;
    margin-right: 24rpx;
}
.goodsInfo{
    flex: 1;
    max-width: 350rpx;
}
.goodsInfo .name{
    font-size: 28rpx;
    color: #333333;
    margin-bottom: 12rpx;
}
.goodsInfo .info{
    font-size: 24rpx;
    color: #666666;
    margin-bottom: 12rpx;
}
.goodsInfo .spec{
    font-size: 24rpx;
    color: #333333;
    margin-bottom: 12rpx;
}
.goodsInfo .spec .num{
    font-size: 28rpx;
}
.goodsInfo .tips{
    display: flex;
    gap: 0 24rpx;
}
.goodsInfo .tips .tip{
    padding: 0 5rpx;
    line-height: 28rpx;
    font-size: 20rpx;
    border-radius: 5rpx;
    color: #E6A23C;
    border: 2rpx solid #E6A23C;

}
.goodsInfo .tips .tip:nth-child(2){
    color: #05C160;
    border: 2rpx solid #05C160;
}
.goodsMoney{
    flex: none;
    font-size: 36rpx;
    color: #012110;
    text-align: right;
}
.allMoney{
    display: flex;
    justify-content: flex-end;
    align-items: center;
    line-height: 40rpx;
    gap: 16rpx;
    font-size: 28rpx;
    color: #666;
    margin-bottom: 28rpx;
}
.allMoney .money text{
    font-size: 40rpx;
    font-weight: bold;
    color: #F73A3A;
}

.footer{
    display: flex;
    justify-content: flex-end;
    gap: 16rpx;
}

.primaryBtn{
    width: 300rpx;
    line-height: 72rpx;
    color: #fff;
    text-align: center;
    padding: 0 25rpx;
    font-size: 28rpx;
    border-radius: 12rpx;
    background: #05C160;
}
.defaultBtn{
    height: 72rpx;
    line-height: 72rpx;
    color: #222;
    text-align: center;
    padding: 0 25rpx;
    font-size: 28rpx;
    border-radius: 12rpx;
    border: 2rpx solid #DDDDDD;

}


.empty{
    padding: 50rpx 0;
}
