page{
    background: #f5f5f5;
}
.container{
    padding: 24rpx;
    background: #f5f5f5;
    padding-bottom: 164rpx;
}
.header{
    position: relative;
    background: #FFFFFF;
}
.header .navTitle{
    position: relative;
    z-index: 10;
}
.header .navTitle .title{
    font-size: 36rpx;
    text-align: center;
    color: #222222;
}

.goods{
    position: relative;
    display: flex;
    align-items: center;
    border-radius: 12rpx;
    background: #fff;
    margin-bottom: 24rpx;
    padding: 28rpx 24rpx;
}

.goods .goodsImg{
    width: 200rpx;
    height: 200rpx;
    border-radius: 12rpx 12rpx 0rpx 0rpx;
    margin-right: 28rpx;
}

.goods .vipPrice{
    height: 36rpx;
    width: auto;
    padding: 0 4rpx;
    line-height: 32rpx;
    border: 2rpx solid #FF7900;
    font-size: 20rpx;
    color: #FF7900;
    background: rgba(255, 121, 0, .05);
    border-radius: 2rpx;
}

.goods .price{
    font-size: 40rpx;
    font-weight: bold;
    line-height: normal;
    color: #F73A3A;
    margin-top: 6rpx;
}
.goods .name{
    font-size: 28rpx;
    color: #333333;
    margin-bottom: 10rpx;
}
.goods .subtitle{
    font-size: 24rpx;
    color: #666;
    margin-bottom: 10rpx;
}
.goods .stepper{
    position: absolute;
    bottom: 32rpx;
    right: 28rpx;
}

.footerBox{
    position: fixed;
    bottom: 0;
    right: 0;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 144rpx;
    background: #fff;
    padding: 0 24rpx;
    z-index: 10001;
}
.footerBox .allCheckbox{
    font-size: 24rpx;
    color: #666666;
    margin-right: 40rpx;
}
.footerBox .moneyBox{
    display: flex;
    align-items: center;

}
.footerBox .moneyBox .money{
    font-size: 24rpx;
    color: #333333;
}
.footerBox .moneyBox .money text{
    font-size: 40rpx;
    font-weight: bold;
    color: #F73A3A;
}
.footerBox .moneyBox .money .des{
    font-size: 24rpx;
    color: #999999;
    margin-top: 8rpx;
}
.footerBox .button{
    width: 200rpx;
    height: 84rpx;
    font-size: 28rpx;
    line-height: 52rpx;
    text-align: center;
    color: #fff;
    padding: 16rpx 0;
    /* 主题色 */
    background: #05C160;
    border-radius: 8rpx;
}
