page{
    background: #f5f5f5;
    padding-bottom: constant(safe-area-inset-bottom); /*兼容 IOS<11.2*/
    padding-bottom: env(safe-area-inset-bottom); /*兼容 IOS>11.2*/
}
.container{
    padding-top: 24rpx;
}
.addressBox{
    padding: 0 32rpx;
    border-radius: 12rpx;
    background: #fff;
    margin-bottom: 24rpx;
}
.addressItem{
    position: relative;
    display: flex;
    align-items: center;
    padding: 28rpx 0;
    border-bottom: 2rpx solid #EEEEEE;
}

.addressInfo{
    padding: 0 12rpx;
}
.addressInfo .address{
    display: flex;
    gap: 0 12rpx;
    font-size: 28rpx;
    color: #666666;
    margin-bottom: 8rpx;
}
.addressInfo .addressName{
    font-size: 32rpx;
    color: #222222;
    font-weight: bold;
    margin-bottom: 8rpx;
}
.addressInfo .userInfo{
    font-size: 28rpx;
    color: #222222;
}

.addressInfo .userInfo .username{
    margin-right: 16rpx;
}
.addressItem .icon{
    position: absolute;
    top: 50%;
    right: 0;
    width: 32rpx;
    height: 32rpx;
    transform: translate(0,-50%);
}
.addressFooter{
    display: flex;
    justify-content: space-between;
    line-height: 62rpx;
    font-size: 24rpx;
}
.addressFooter .del{
    color: #F23D3D
}


.emptyBox{
    position: fixed;
    top: 50%;
    left: 0;
    width: 100vw;
    transform: translate(0,-50%);
    padding: 0 24rpx;
    color: #999999;
    font-size: 28rpx;
    text-align: center;
}
.emptyBox .img{
    width: 396rpx;
    height: 396rpx;
}
.publicBtn{
    width: 100%;
    line-height: 84rpx;
    text-align: center;
    color: #fff;
    font-size: 32rpx;
    background: #05C160;
    border-radius: 8rpx;
    margin-top: 80rpx;
}
