.swiperBox{
    height: 420rpx;
    margin-bottom: -38rpx;
}
.swiperBox .storeImg{
    display: block;
    width: 750rpx;
    height: 420rpx;
}

page{
    background: #F7F7F7;
    padding-bottom: 50rpx;
}
.container{
    padding: 0 26rpx;

}
.box{
    position: relative;
    padding: 0 24rpx;
    border-radius: 24rpx;
    background: #fff;
    margin-bottom: 24rpx;
}
.storeNameBox{
    position: relative;
    height: 172rpx;
    padding-top: 40rpx;
    border-bottom: 2rpx solid #eee;
}
.storeNameBox .storeName{
    display: flex;
    align-items: center;
    font-size: 32rpx;
    font-weight: bold;
    color: #222222;
    margin-bottom: 10rpx;
}
.storeNameBox .storeName .tag{
    width: 138rpx;
    height: 52rpx;
    line-height: 52rpx;
    text-align: center;
    font-size: 24rpx;
    color: #422601;
    background: linear-gradient(270deg, #FFBB00 0%, rgba(255, 144, 0, 0.42) 100%);
    margin-right: 16rpx;
    border-radius: 8rpx;
}
.storeNameBox .rateBox{
    display: flex;
    align-items: center;
}
.storeNameBox .rateBox .rateNum{
    margin-left: 20rpx;
    font-size: 24rpx;
    color: #666666;
    padding-top: 10rpx;
}
.storeNameBox .goPhone{
    display: flex;
    align-items: center;
    position: absolute;
    top:50%;
    right: 0;
    font-weight: bold;
    font-size: 24rpx;
    color: #222222;
    transform: translate(0,-50%);
}
.storeNameBox .goPhone .icon{
    width: 28rpx;
    height: 28rpx;
    margin-right: 10rpx;
    display: inline-block;
}


.time{
    display: flex;
    align-items: center;
    height: 88rpx;
    font-size: 28rpx;
    font-weight: bold;
    color: #222222;
    border-bottom: 2rpx solid #EEEEEE;
}
.time .iconTime{
    width: 32rpx;
    height: 32rpx;
    display: inline-block;
    margin-right: 10rpx;
}
.addressBox{
    position: relative;
    display: flex;
    padding: 24rpx 0;
    /*height: 148rpx;*/
}
.addressBox .goMap{
    display: flex;
    align-items: center;
    position: absolute;
    top:50%;
    right: 0;
    font-weight: bold;
    font-size: 24rpx;
    color: #222222;
    transform: translate(0,-50%);
}
.addressBox .iconLocation{
    width: 32rpx;
    height: 32rpx;
    margin-right: 10rpx;
    margin-top: 5rpx;
    display: inline-block;
}
.addressDetail{
    width: 520rpx;
}
.addressDetail .addressName{
    color: #222;
    font-size: 28rpx;
    margin-bottom: 8rpx;
    font-weight: bold;
}
.addressDetail .address{
    color: #666;
    font-size: 24rpx;
}
.addressBox .goMap .icon{
    width: 20rpx;
    height: 20rpx;
    margin-right: 5rpx;
    display: inline-block;
}


.vipBox{
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    height: 190rpx;
    padding: 0 34rpx
}
.vipBox .title{
    position: relative;
    font-size: 28rpx;
    font-weight: bold;
    color: #5C5143;
    margin-bottom: 14rpx;
}
.vipBox .discount{
    position: relative;
    font-size: 40rpx;
    font-weight: bold;
    color: #B9571D;
}
.vipBox .bg{
    position: absolute;
    top:0;
    right:0;
    width: 100%;
    height: 100%;
}



.evaluates{
    border-radius: 20rpx;
    background: #fff;
    padding: 32rpx 30rpx 0 30rpx;
    margin-top: 24rpx;
}

.evaluates .head{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12rpx;

}
.evaluates .head .left{
    font-size: 28rpx;
    color: #222222;
    font-weight: bold;
}
.evaluates .head .left text{
    font-size: 24rpx;
    color: #999999;
    font-weight: normal;
}

.evaluate .userInfo{
    height: 66rpx;
    display: flex;
    align-items: center;
}
.evaluate .userInfo .avatar{
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    margin-right: 14rpx;
}
.evaluate .userInfo .user{
    font-size: 24rpx;
    color: #222222;
    font-weight: bold;
}
.evaluate .content{
    font-size: 24rpx;
    color: #222222;
    margin-top: 10rpx;
    margin-bottom: 18rpx;
}
.evaluates .footer{
    line-height: 80rpx;
    text-align: center;
    font-size: 28rpx;
    color: #FF7900;
    border-top: 2rpx solid #EEEEEE;
}

