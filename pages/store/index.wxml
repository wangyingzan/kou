
<van-sticky >
    <view>
        <view class="head">
            <view class="location">石家庄</view>
            <view class='searchBox'>
                <input class="search" placeholder-class="place" auto-focus placeholder="输入店铺名称"/>
                <icon type="search" color="#4DC185" size="29rpx" />
            </view>
        </view>
        <view class="filterBox">
            <van-dropdown-menu active-color="#F23D3D">
                <van-dropdown-item value="{{ value1 }}" options="{{ option1 }}" />
                <van-dropdown-item value="{{ value2 }}" options="{{ option2 }}" />
                <van-dropdown-item value="{{ value3 }}" options="{{ option3 }}" />
            </van-dropdown-menu>
        </view>
    </view>

</van-sticky>
<view class="container">

    <view class="list">
        <navigator url="/pages/store/detail/index?id={{item.storeId}}" class="store" wx:for="{{list}}" wx:key="storeId">
            <image class="img" src="{{item.storeImg}}"/>
            <view class="info">
                <view class="name">{{item.storeName}}</view>
                <view >营业时间：8：00-18：00</view>
                <view >会员折扣：<text style="color: #FF7900">{{item.rate}}折</text></view>
                <view >{{item.address}}</view>
            </view>
            <view class="distance"> <image class="icon" src="/static/images/icon_dis.png"/> {{item.distance}}</view>
            <image src="/static/images/icon_arrow.png" class="arrow" > > </image>
        </navigator>
    </view>
</view>

