
.header{
    display: flex;
    font-size: 0;
    text-align: center;
    padding: 20rpx 24rpx;
}
.header .left{
    flex: none;
    width: 260rpx;
    height: 278rpx;
    padding: 20rpx;
    border-radius: 12rpx;
    background: #fff;
    margin-right: 20rpx;
}
.header .left .title{
    color: #222;
    text-align: left;
    font-size: 24rpx;
}
.header .left .grade{
    text-align: center;
    font-size: 52rpx;
    font-weight: bold;
    color: #222222;
    margin-top: 32rpx;
}
.header .left .grade text{
    font-size: 20rpx;
    font-weight: normal;
    color: #666666;
}

.header .left .other{
    text-align: center;
    font-size: 20rpx;
    color: #999999;
    margin-top: 38rpx;
}
.header .right{
    flex: 1;
    display: flex;
    gap: 24rpx 16rpx;
    padding: 22rpx 16rpx;
    flex-wrap: wrap;
    border-radius: 12rpx;
    background: #fff;
}
.header .right .item{
    height: 58rpx;
    line-height: 58rpx;
    color: #666666;
    font-size: 24rpx;
    border-radius: 8rpx;
    padding: 0 20rpx;
    background: #F7F7F7;
}


.evaluates{
    border-radius: 20rpx;
    background: #fff;
    margin-top: 24rpx;
}
.evaluates .evaluate{
    padding: 32rpx 48rpx;
    border-bottom: 2rpx solid #EEEEEE;
}
.evaluates .head{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 24rpx;
    padding-left: 24rpx;

}
.evaluates .head .left{
    font-size: 32rpx;
    color: #222222;
    font-weight: bold;
}
.evaluates .head .left text{
    font-size: 24rpx;
    color: #999999;
    font-weight: normal;
}

.evaluate .userInfo{
    height: 66rpx;
    display: flex;
    align-items: center;
}
.evaluate .userInfo .avatar{
    width: 76rpx;
    height: 76rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}
.evaluate .userInfo .user{
    font-size: 28rpx;
    color: #222222;
    font-weight: bold;
}
.evaluate .userInfo .user .username{
    margin-bottom: 12rpx;
}
.evaluate .content{
    line-height: 40rpx;
    font-size: 28rpx;
    color: #666;
    margin-top: 24rpx;
}
.evaluate .imgs{
    display: flex;
    gap: 0 20rpx;
    margin-top: 14rpx;
}
.evaluate .imgs .img{
    width: 136rpx;
    height: 136rpx;
    border-radius: 8rpx;
}


