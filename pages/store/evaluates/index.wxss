

.evaluates{
    border-radius: 20rpx;
    background: #fff;
    padding: 32rpx 30rpx 0 30rpx;
    margin-top: 24rpx;
}

.evaluates .head{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12rpx;

}
.evaluates .head .left{
    font-size: 28rpx;
    color: #222222;
    font-weight: bold;
}
.evaluates .head .left text{
    font-size: 24rpx;
    color: #999999;
    font-weight: normal;
}

.evaluate .userInfo{
    height: 66rpx;
    display: flex;
    align-items: center;
}
.evaluate .userInfo .avatar{
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    margin-right: 14rpx;
}
.evaluate .userInfo .user{
    font-size: 24rpx;
    color: #222222;
    font-weight: bold;
}
.evaluate .content{
    font-size: 24rpx;
    color: #222222;
    margin-top: 10rpx;
    margin-bottom: 18rpx;
}


