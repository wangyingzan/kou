page{
    padding-bottom: 50rpx;
    background: #fff;
}
.container{
    padding: 0 26rpx;
}

.head{
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #fff;
    padding: 0 26rpx;
}
.head .location{
    position: relative;
    width: 165rpx;
    line-height: 60rpx;
    text-align: right;
    font-size: 28rpx;
    color: #222222;
    padding-right: 40rpx;
}
.head .location:after{
    content: "";
    position: absolute;
    top: 50%;
    right: 0rpx;
    transform: translate(-50%,-50%);
    width: 0;
    height: 0;
    border-left: 10rpx solid transparent;
    border-right: 10rpx solid transparent;
    border-top: 15rpx solid #999;
}
.head .searchBox{
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 524rpx;
    height: 68rpx;
    border: 2rpx solid #CCCCCC;
    border-radius: 8rpx;
    padding: 0 24rpx;
}
.search{
    flex: 1;
    height: 64rpx;
    line-height: 68rpx;
    font-size: 24rpx;
}
.place{
    color: #CCCCCC;
}

.filterBox{
    background: #fff;
}


.filterBox .van-dropdown-menu {
    box-shadow: none;
}


.list .store{
    position: relative;
    display: flex;
    padding: 25rpx 0;
    border-bottom: 2rpx solid #EEEEEE;
}
.list .store .img{
    width: 160rpx;
    height: 160rpx;
    border-radius: 12rpx;
    margin-right: 16rpx;
}
.list .store .info{
    line-height: 40rpx;
    font-size: 24rpx;
    color: #666666;
}
.list .store .info .name{
    font-size: 28rpx;
    font-weight: bold;
    color: #222222;
}

.list .store .distance{
    display: flex;
    align-items: center;
    position: absolute;
    top: 24rpx;
    right: 0;
    font-size: 24rpx;
    color: #4DC185
}
.list .store .distance .icon{
    width: 23rpx;
    height: 28rpx;
    margin-right: 8rpx;
}

.list .store .arrow{
    position: absolute;
    bottom: 33rpx;
    right: 0;
    width: 12rpx;
    height: 22rpx;
}
